{
    "name": "laravel/lumen",
    "description": "The Laravel Lumen Framework.",
    "keywords": ["framework", "laravel", "lumen"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0",
        "barryvdh/laravel-cors": "^0.9.3",
        "deployer/deployer": "^6.0.3",
        "dusterio/lumen-passport": "^0.2.0",
        "laravel/lumen-framework": "5.5.*",
        "league/fractal": "^0.17.0",
        "league/uri": "^5.0",
        "ramsey/uuid": "^3.7",
        "vlucas/phpdotenv": "~2.2"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "dev-master",
        "friendsofphp/php-cs-fixer": "^2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~0.9",
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "^0.8.5",
        "phpunit/phpunit": "^6.3.1",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "database/",
            "tests/"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "phpstan": "vendor/bin/phpstan analyse -l 7 -c phpstan.neon app tests",
        "phpcs": "vendor/bin/phpcs --standard=PSR2 --extensions=php --colors --severity=1 app"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true
    }
}
